<div class="user-index-wrapper">
  <div class="container">
    <% @users.each do |user| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= link_to user_path(id: user.id) do %>
            <div class="user-index-single">
              <%= image_tag user.user_image.url, class: 'user-icon' %>
              <div class='user-info'>
                <p class='user-name'>
                  <%= user.name %>
                </p>
                <p class='user-bio'>
                  <%= user.user_bio %>
                </p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
    
  </div>
</div>