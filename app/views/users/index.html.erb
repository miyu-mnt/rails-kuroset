<div class="user-index-wrapper">
  <div class="container">
    <% @users.each do |user| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= link_to user_path(id: user.id) do %>
            <div class="user-index-single">
              <% if user.user_image? %>
                <%= image_tag user.user_image, class: 'user-icon' %>
              <% else %>
                <%= image_tag 'default.png', class: 'user-icon' %>
              <% end %>
              <div class='user-info'>
                <p class='user-name'>
                  <%= user.name %>
                </p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
    
    <div id = 'to-top-btn'>
      <%= image_tag 'icons/top.png', class: 'to-top' %>
    </div>
    
    <script>
    $(function() {
      var topBtn = $('#to-top-btn');
      topBtn.hide();
      
      $(window).scroll(function() {
        if ($(this).scrollTop() > 100) {
          topBtn.fadeIn();
        } else {
          topBtn.fadeOut();
        }
      });
      
      topBtn.click(function() {
        $('body,html').animate({scrollTop: 0}, 'slow');
      });
    });
    </script>
    
  </div>
</div>