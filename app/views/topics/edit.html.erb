<div class="topic-edit-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center text-white">Edit</h1>
        <%= form_for @topic do |f| %>
          <div class="form-group">
            <%= f.label :description, class: "text-white" %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>
          <%= f.hidden_field :id, value: params[:id] %>
          
          <% if logged_in? %>
            <%= f.submit '投稿', class: 'btn-block btn btn-submit' %>
          <% end %>
          
        <% end %>
      </div>
    </div>
  </div>
</div>