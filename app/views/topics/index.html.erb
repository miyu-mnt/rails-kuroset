<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <p class="topic-author">
              <%= topic.user.name %>
            </p>
            <%= image_tag topic.image.url %>
            
            <% if !topic.favorite_users.include?(current_user) %>
              <%= link_to favorites_path(topic_id: topic.id), method: :post do %>
                <%= image_tag 'icons/heart_wh.png', class: 'topic-index-icon' %>
              <% end %>
            <% else %>
              <%= link_to favorites_path(topic_id: topic.id), method: :delete do %>
                <%= image_tag 'icons/heart_bl.png', class: 'topic-index-icon' %>
              <% end %>
            <% end %>
            
            <span class = 'fav-count'>
              <%= topic.favorite_users.count %>
            </span>
            
            <%= image_tag 'icons/comment.png', class: 'topic-index-icon' %>
            
            <%= link_to topic_path(id: topic.id), method: :delete do %>
              <span class = 'topic-edit'>delete</span>
            <% end %>
            <%= link_to edit_topic_path(id: topic.id) do %>
              <span class = 'topic-edit'>edit</span>
            <% end %>
            
            <p class="topic-text">
              <%= topic.description %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
    
    <div id = 'to-top-btn'>
      <%= image_tag 'icons/top.png', class: 'to-top' %>
    </div>
    
    <script>
    $(function() {
      var topBtn = $('#to-top-btn');
      topBtn.hide();
      
      $(window).scroll(function() {
        if ($(this).scrollTop() > 100) {
          topBtn.fadeIn();
        } else {
          topBtn.fadeOut();
        }
      });
      
      topBtn.click(function() {
        $('body,html').animate({scrollTop: 0}, 'slow');
      });
    });
    </script>
    
  </div>
</div>